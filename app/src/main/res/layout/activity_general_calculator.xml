<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feaure.GeneralCalculator">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Result"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:textSize="24dp"

        android:gravity="center"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/Result"
        android:padding="16dp"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Btn1"
            android:text="1"


            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Btn2"
            android:text="2"
            app:layout_constraintStart_toEndOf="@+id/Btn1"
            android:layout_marginLeft="8dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Btn3"
            android:text="3"
            app:layout_constraintStart_toEndOf="@+id/Btn2"
            android:layout_marginLeft="8dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Btn4"
            android:text="4"
            app:layout_constraintStart_toStartOf="@+id/Btn1"
            app:layout_constraintTop_toBottomOf="@id/Btn1"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Btn5"
            android:text="5"
            app:layout_constraintStart_toEndOf="@+id/Btn4"
            app:layout_constraintBottom_toBottomOf="@id/Btn4"
            android:layout_marginLeft="8dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Btn6"
            android:text="6"
            app:layout_constraintStart_toEndOf="@+id/Btn5"
            app:layout_constraintBottom_toBottomOf="@id/Btn5"
            android:layout_marginLeft="8dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Btn7"
            android:text="7"
            app:layout_constraintStart_toStartOf="@+id/Btn4"
            app:layout_constraintTop_toBottomOf="@id/Btn4"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Btn8"
            android:text="8"
            app:layout_constraintStart_toEndOf="@+id/Btn7"
            app:layout_constraintBottom_toBottomOf="@id/Btn7"
            android:layout_marginLeft="8dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Btn9"
            android:text="9"
            app:layout_constraintStart_toEndOf="@+id/Btn8"
            app:layout_constraintBottom_toBottomOf="@id/Btn8"
            android:layout_marginLeft="8dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            app:layout_constraintStart_toEndOf="@id/Btn3"
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/black"
            android:id="@+id/AddBtn"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            app:layout_constraintStart_toEndOf="@id/Btn6"
            app:layout_constraintTop_toBottomOf="@id/AddBtn"
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/black"
            android:id="@+id/SubBtn"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            app:layout_constraintStart_toEndOf="@id/Btn9"
            app:layout_constraintTop_toBottomOf="@id/SubBtn"
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/black"
            android:id="@+id/MulBtn"
            />

        <Button
            android:id="@+id/ResultGO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            app:layout_constraintTop_toBottomOf="@+id/Btn8"
            app:layout_constraintStart_toStartOf="@id/Btn8"

            />
        <Button
            android:id="@+id/BtnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cLEAR"
            app:layout_constraintTop_toBottomOf="@+id/Btn9"
            app:layout_constraintStart_toStartOf="@id/Btn9"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>