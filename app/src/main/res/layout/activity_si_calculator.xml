<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feaure.SI_Calculator">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calculate SI"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/SIresult"
        app:layout_constraintEnd_toEndOf="@+id/SIresult"
        app:layout_constraintStart_toStartOf="@+id/SIresult"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:textSize="32sp"
        android:id="@+id/SIresult"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Principal"/>
        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/princiamt"
            android:text=""
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Time(Years)"/>
        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/SItime"
            android:text=""
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter rate(years)"/>
        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/SIrate"
            android:text=""
            android:gravity="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:id="@+id/calSIbtn"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>